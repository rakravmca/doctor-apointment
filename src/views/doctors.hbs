<div class="row">
<!-- Earnings (Monthly) Card Example -->
{{#each doctors}}
    <div class="col-xs-12 col-sm-4 col-md-4 mb-4">
        <div class="card border-left-success shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                    <div class="text-sm font-weight-bold text-success text-uppercase mb-1">{{name}}</div>
                    <div class="text-xs font-weight-bold text-info mb-1">Specialist: {{specialist}}</div> 
                    <div class="text-xs font-weight-bold text-warning mb-1">Time: {{start_time}} - {{end_time}}</div>
                    <div class="text-xs font-weight-bold text-warning mb-1">Consultation duration : {{appointment_slot_time}} min</div>
                    <div class="text-xs font-weight-bold text-info mb-1">{{patients_per_day}} patients/day</div>
                    <a class="text-sm font-weight-bold text-primary text-uppercase mb-1" href="/doctor/appointment/{{_id}}">Book Appointment</a>
                    </div>
                    <div class="col-auto">
                    <i class="fas fa-calendar fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
{{/each}}
</div>
<div class="row">
    <div class="col-xl-3 col-md-6 mb-4" style="height:50px;"></div>
</div>